{
    "name": "node-templates",
    "version": "1.0.0",
    "description": "My boilerplate for node projects",
    "main": "index.js",
    "dependencies": {
        "config": "^3.3.1"
    },
    "devDependencies": {
        "@types/config": "0.0.36",
        "@types/jest": "^26.0.10",
        "@types/node": "^14.6.2",
        "@typescript-eslint/eslint-plugin": "^3.10.1",
        "@typescript-eslint/parser": "^3.10.1",
        "eslint": "^7.7.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-jest": "^23.20.0",
        "jest": "^26.4.2",
        "jest-package-audit": "^3.1.2",
        "prettier": "^2.1.1",
        "ts-jest": "^26.3.0",
        "typescript": "^4.0.2"
    },
    "scripts": {
        "build": "npm run lint && tsc",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint --fix . --ext .ts,.tsx",
        "format": "npx prettier --loglevel silent --write",
        "test": "npm run build && npm run test:jest",
        "test:jest": "jest --coverage",
        "test:watch": "npm run build && jest --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/markjdavies/node-templates.git"
    },
    "author": "Mark Davies",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/markjdavies/node-templates/issues"
    },
    "homepage": "https://github.com/markjdavies/node-templates#readme"
}
